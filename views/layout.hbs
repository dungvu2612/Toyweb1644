 <script>
    document.addEventListener("DOMContentLoaded", function() {
      const currentPage = window.location.pathname; // Lấy đường dẫn hiện tại

      // Duyệt qua tất cả các liên kết trong phần header và thêm lớp "active" cho liên kết tương ứng
      const navLinks = document.querySelectorAll(".navbar-nav .nav-link");
      navLinks.forEach(link => {
        const linkHref = link.getAttribute("href");
        if (
          (currentPage.startsWith(linkHref) && linkHref !== "/" && !linkHref.endsWith("manager")) ||
          (currentPage.includes("/doll/manager") && linkHref.includes("/doll")) ||
          (currentPage.includes("/lego/manager") && linkHref.includes("/lego"))
        ) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    });
  </script>
