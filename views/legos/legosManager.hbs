<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <style>
    /* Custom Lego Manager Styles */
    .lego-manager {
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .lego-manager th {
      font-weight: bold;
    }
    .lego-manager .edit-button {
      color: white;
      background-color: green;
      border: none;
    }
    .lego-manager .delete-button {
      color: white;
      background-color: red;
      border: none;
    }
    .lego-manager .add-button {
      color: white;
      background-color: blue;
      border: none;
    }
    /* Custom Header Styles */
    .custom-header {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
 <br>
 <br>
 <br>

  <!-- Lego Manager Table -->
  <div class="container lego-manager">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th colspan="7" class="text-center">
            <h1 class="text-primary">LEGO MANAGER</h1>
          </th>
        </tr>
        <tr>
          <th colspan="2">
            <form action="/lego/manager/search" method="post">
              <input class="form-control" type="search" name="keyword" placeholder="Search by name" required>
            </form>
          </th>
          <th>
            <a class="btn add-button" href="/lego/add">‚úö</a>
          </th>
        </tr>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Image</th>
          <th>Quantity</th>
          <th>Best Seller</th>
          <th>Menu</th>
        </tr>
      </thead>
      <tbody>
        {{#each legos }}
        <tr>
          <td>{{ name }}</td>
          <td>{{ description}}</td>
          <td>{{ price }}</td>
          <td>
            <img src="{{ imageUrl }}" width="100" height="100" alt="{{ name }}">
          </td>
          <td>{{ quantity }}</td>
          <td>{{ bestSeller }}</td>
          <td>
            <a class="btn edit-button" href="/lego/edit/{{ _id }}">‚úé</a>
            <a class="btn delete-button" href="/lego/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this doll?');">üóëÔ∏è</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
